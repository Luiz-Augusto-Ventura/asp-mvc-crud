@model ProjetoMVC2.Models.Produto

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Alterar produto</title>
    <link href="~/content/materialize/css/materialize.css" type="text/css" rel="stylesheet" media="screen,projection" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="icon" href="~/Images/materialize_icon.png" sizes="32x32">
</head>
<body>
    <div class="navbar-fixed">
        <nav class="light-red lighten-1" role="navigation">
            <div class="nav-wrapper container">              
                <div class="brand-logo left hide-on-small-only">Alterando produto</div>
                <ul class="right hide-on-med-and-down">
                    <li><a href="@Url.Action("Index")">Voltar ao início</a></li>
                </ul>  

                <div class="brand-logo right hide-on-med-and-up" style="font-size: 22px;">Alterando produto</div>
                <a href="@Url.Action("Index")" class="hide-on-large-only"><i class="material-icons">chevron_left</i></a>               
            </div>
        </nav>
    </div>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        
        <div class="form-horizontal container">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ProdutoId)

            <br />
            <div class="card-panel grey lighten-4 grey-text text-darken-1 z-depth-0">
                <i class="material-icons left">info</i>
                Para editar um produto, digite as mudanças que deseja realizar e clique em "Salvar".
            </div>

            <form>
                
                <div class="form-group row">                  
                    <div class="input-field col s12">
                        @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.LabelFor(model => model.Nome, "Nome do produto")
                        @Html.ValidationMessageFor(model => model.Nome, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">   
                    @Html.LabelFor(model => model.CategoriaId, "Selecione a categoria do produto")             
                    <div class="input-field col s12">
                        @Html.DropDownList("CategoriaId", null, htmlAttributes: new { @class = "form-control "})
                        @Html.ValidationMessageFor(model => model.CategoriaId, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">  
                    @Html.LabelFor(model => model.FabricanteId, "Selecione o fabricante do produto")                
                    <div class="input-field col s12">   
                        @Html.DropDownList("FabricanteId", null, htmlAttributes: new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.FabricanteId, "", new { @class = "text-danger" })
                    </div>
                </div>
            </form>

            <div class="form-group">
                <div class="center">
                    <br />
                    <button type="submit" value="Save" class="btn waves-effect waves-light red lighten-1"><i class="material-icons right">save</i>Salvar</button>
                </div>
            </div>
        </div>
    }
    
    <script src="~/scripts/jquery-2.1.1.min.js"></script>
    <script src="~/scripts/materialize/materialize.js"></script>
    <script src="~/scripts/materialize/init.js"></script>
    <script src="~/scripts/materialize/ddl.js"></script>
</body>
</html>
